                            <div class="text-zinc-500 text-xs">3.1 ‚Ä¢ just now</div>
                        </div>
                        <div class="ai-bubble message-bubble px-5 py-3.5 rounded-3xl rounded-tl-none text-zinc-200 text-[15px] leading-relaxed mt-1.5">
                            ${content}
                        </div>
                        <div class="flex gap-x-4 mt-2.5">
                            <div class="flex items-center gap-x-1 text-zinc-500 hover:text-zinc-300 transition-colors cursor-pointer text-xs">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M14 10h4.764a2 2 0 011.789 2.894L18 21H6l-2.553-8.106A2 2 0 015.236 10H10" />
                                </svg>
                                Like
                            </div>
                            <div class="flex items-center gap-x-1 text-zinc-500 hover:text-zinc-300 transition-colors cursor-pointer text-xs">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 14H5.236a2 2 0 01-1.789-2.894L5 3h12l1.553 8.106A2 2 0 0116.764 14H10" />
                                </svg>
                                Dislike
                            </div>
                            <div onclick="copyMessage(this)" class="flex items-center gap-x-1 text-zinc-500 hover:text-zinc-300 transition-colors cursor-pointer text-xs">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16v-4m4 4v4m-8-8h8m-4-4v4" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 11V9a4 4 0 00-4-4H7a4 4 0 00-4 4v2m14 0v2a4 4 0 01-4 4h-2" />
                                </svg>
                                Copy
                            </div>
                        </div>
                    </div>
                `
            } else {
                messageDiv.innerHTML = `
                    <div class="flex-1 max-w-[65%]">
                        <div class="flex justify-end">
                            <div class="bg-blue-600 px-5 py-3.5 rounded-3xl rounded-br-none message-bubble">
                                <div class="text-white text-[15px] leading-relaxed">${content}</div>
                            </div>
                        </div>
                        <div class="flex justify-end mt-1.5">
                            <div class="text-zinc-500 text-xs">just now</div>
                        </div>
                    </div>
                    <div class="flex-shrink-0 w-8 h-8 mt-1">
                        <div class="w-8 h-8 bg-zinc-700 rounded-2xl overflow-hidden">
                            <img src="https://picsum.photos/id/64/200/200" class="object-cover">
                        </div>
                    </div>
                `
            }

            messagesContainer.appendChild(messageDiv)
            
            // Scroll to bottom
            setTimeout(() => {
                messagesContainer.scrollTop = messagesContainer.scrollHeight
            }, 10)
        }

        function simulateTyping(callback) {
            const messagesContainer = document.getElementById('messages')
            
            const typingDiv = document.createElement('div')
            typingDiv.className = 'flex gap-4'
            typingDiv.id = 'typing-indicator'
            typingDiv.innerHTML = `
                <div class="flex-shrink-0 w-8 h-8 mt-1">
                    <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl flex items-center justify-center text-white shadow">
                        <span class="text-xl">üåå</span>
                    </div>
                </div>
                <div class="flex-1">
                    <div class="flex items-baseline gap-x-2">
                        <div class="font-semibold text-white text-sm">Nova</div>
                    </div>
                    <div class="ai-bubble message-bubble px-5 py-4 rounded-3xl rounded-tl-none mt-1.5">
                        <div class="typing">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>
                </div>
            `
            
            messagesContainer.appendChild(typingDiv)
            messagesContainer.scrollTop = messagesContainer.scrollHeight
            
            setTimeout(() => {
                if (typingDiv.parentNode) {
                    typingDiv.parentNode.removeChild(typingDiv)
                }
                callback()
            }, 1400)
        }

        function sendMessage() {
            const input = document.getElementById('message-input')
            const text = input.value.trim()
            
            if (!text) return
            
            // Add user message
            addMessage('user', text)
            
            // Clear input
            input.value = ''
            
            // Fake delay then AI response
            setTimeout(() => {
                simulateTyping(() => {
                    const randomResponse = sampleResponses[Math.floor(Math.random() * sampleResponses.length)]
                    const extendedResponse = randomResponse + " " + getRandomFact()
                    addMessage('ai', extendedResponse)
                })
            }, 600)
        }

        function getRandomFact() {
            const facts = [
                "Did you know octopuses have three hearts?",
                "The universe is expanding faster than the speed of light in some regions.",
                "Bananas are technically berries, but strawberries aren't.",
                "A flock of flamingos is called a flamboyance.",
                "The shortest commercial flight in the world is just 57 seconds long."
            ]
            return facts[Math.floor(Math.random() * facts.length)]
        }

        function copyMessage(el) {
            const bubble = el.closest('.ai-bubble') || el.closest('.message-bubble')
            if (!bubble) return
            
            const text = bubble.textContent.trim()
            
            navigator.clipboard.writeText(text).then(() => {
                const orig = el.innerHTML
                el.innerHTML = '‚úÖ Copied'
                el.classList.add('text-emerald-500')
                
                setTimeout(() => {
                    el.innerHTML = orig
                    el.classList.remove('text-emerald-500')
                }, 1400)
            })
        }

        function newChat() {
            // Clear messages
            const messagesContainer = document.getElementById('messages')
            messagesContainer.innerHTML = ''
            
            // Show welcome
            document.getElementById('welcome-state').classList.remove('hidden')
            document.getElementById('messages').classList.add('hidden')
            
            // Blur active states
            document.querySelectorAll('.sidebar-item').forEach(el => {
                el.classList.remove('active-chat')
            })
            
            currentChatId = null
            
            // Focus input
            document.getElementById('message-input').focus()
        }

        function loadDummyChat(id) {
            newChat()
            
            // Mark active
            document.querySelectorAll('.sidebar-item').forEach(el => el.classList.remove('active-chat'))
            
            // Would find the element but for simplicity we just load
            currentChatId = id
            
            // Load the dummy messages with slight delay
            setTimeout(() => {
                const messages = dummyChats[id]
                if (messages) {
                    messages.forEach(msg => {
                        addMessage(msg.role, msg.content)
                    })
                }
            }, 120)
        }

        function useExample(prompt) {
            const input = document.getElementById('message-input')
            input.value = prompt
            sendMessage()
        }

        // Auto resize textarea
        const textarea = document.getElementById('message-input')
        textarea.addEventListener('input', function() {
            this.style.height = 'auto'
            this.style.height = (this.scrollHeight) + 'px'
            
            // Enable/disable send button
            document.getElementById('send-button').disabled = this.value.trim() === ''
        })

        // Send on enter (without shift)
        textarea.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault()
                sendMessage()
            }
        })

        // Initial focus
        setTimeout(() => {
            textarea.focus()
        }, 420)
    </script>
</body>
</html>
